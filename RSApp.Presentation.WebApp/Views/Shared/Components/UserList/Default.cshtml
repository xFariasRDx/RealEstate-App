@using RSApp.Core.Services.Dtos.Account
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor _httpContext;
@model IEnumerable<AccountDto>



<div class="row">
  <table class="table table-dark table-striped table-hover text-center">
    <thead class="text-center ">
      <tr>
        <th>
          Profile
        </th>
        <th>
          Name
        </th>
        <th>
          Email
        </th>
        <th>
          Role
        </th>
        <th>
          Edit
        </th>
        <th>
          Actions
        </th>
      </tr>
    </thead>
    <tbody class="items-baseline align-middle">
      @foreach (var item in Model) {
        <tr>
          <td>
            <img src="@(item.Image)" class="rounded-3xl mx-auto" style="width: 40px; height: 40px;" />
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.FullName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Email)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Role)
          </td>
          <td>
            <a class="btn btn-outline-primary" asp-controller="AdminUser" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
          </td>
          <td>
            <a class="btn btn-outline-@(item.EmailConfirmed ==false ?"success" : "danger")" asp-controller="AdminUser" asp-action="ChangeStatus" asp-route-id="@item.Id" onclick="return confirm('Are you Sure?')">@(item.EmailConfirmed == false ? "Active" : "Desactive")</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>
